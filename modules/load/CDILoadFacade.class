<?php

/**
 * Facade for the load command.
 */
class CDILoadFacade extends CDIAbstractDataTypeFacade {
  
  /**
   * Loads an object by it's ID.
   * 
   * @param mixed $id
   *   The ID of the object.
   * 
   * @return CDIDataObjectInterface
   *   A data object.
   */
  public function load($id) {
    $command = new CDILoadCommand($id);
    $this->fireCommand($command);
    return $command->getObject();
  }
  
}